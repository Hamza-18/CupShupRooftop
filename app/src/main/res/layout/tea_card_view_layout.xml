<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_id"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_margin="15dp"
    app:cardBackgroundColor="#DCD4D4"
    app:cardCornerRadius="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_tea_id"
            android:layout_width="118dp"
            android:layout_height="81dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tea_item_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="127dp"
            android:layout_marginTop="32dp"
            android:textColor="#070404"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/image_tea_id"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tea_quantity_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="5dp"
            android:text="1"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/increment_items_tea_id"
            app:layout_constraintTop_toBottomOf="@+id/tea_item_id" />

        <Button
            android:id="@+id/increment_items_tea_id"
            android:layout_width="22sp"
            android:layout_height="22sp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:foreground="@drawable/add"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tea_item_id" />

        <Button
            android:id="@+id/decriment_items_tea_id"
            android:layout_width="22sp"
            android:layout_height="22sp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:foreground="@drawable/minus"
            app:layout_constraintEnd_toStartOf="@+id/tea_quantity_id"
            app:layout_constraintTop_toBottomOf="@+id/tea_item_id" />

        <Button
            android:id="@+id/tea_add_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#CDB7B7"
            android:text="Add To Cart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.585"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Price:"
            android:textColor="#0B0707"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_tea_id" />

        <TextView
            android:id="@+id/tea_price_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#EA1B1B"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/textView_8"
            app:layout_constraintTop_toBottomOf="@+id/image_tea_id" />

        <Spinner
            android:id="@+id/tea_spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/decriment_items_tea_id"
            app:layout_constraintStart_toEndOf="@+id/textView_5"
            app:layout_constraintTop_toBottomOf="@+id/tea_item_id" />

        <TextView
            android:id="@+id/textView_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:text="Size"
            android:textColor="#000000"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/image_tea_id"
            app:layout_constraintTop_toBottomOf="@+id/tea_item_id" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>